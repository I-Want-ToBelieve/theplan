{
  "name": "theplan",
  "version": "0.0.0",
  "private": "true",
  "type": "module",
  "description": "the plan",
  "author": "I-Want-ToBelieve",
  "license": "MIT",
  "scripts": {
    "setup": "rm -rf node_modules apps/*/node_modules && pnpm install && pnpm build",
    "build": "pnpm clean && pnpm -r build",
    "rebuild": "pnpm install && pnpm build",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "watch": "pnpm --parallel run watch",
    "clean": "rm -rf apps/*/dist",
    "changeset": "changeset",
    "version:no-npm": "pnpm exec tsx ./scripts/changesets-extra.ts",
    "version": "changeset version && pnpm install:frozen && pnpm version:no-npm",
    "install:frozen": "pnpm install --frozen-lockfile false",
    "release": "changeset publish",
    "release:beta": "changeset pre enter beta && pnpm run version && pnpm build && pnpm release && changeset pre exit",
    "release:snapshot": "changeset version --snapshot canary && pnpm install:frozen && pnpm build && pnpm release --tag canary --no-git-tag --snapshot"
  },
  "keywords": [
    "theplan",
    "yabai",
    "krohnkite",
    "dynamic tiled window management"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/I-Want-ToBelieve/theplan"
  },
  "homepage": "https://github.com/I-Want-ToBelieve/theplan",
  "bugs": "https://github.com/I-Want-ToBelieve/theplan/issues",
  "devDependencies": {
    "@babel/cli": "^7.24.6",
    "@babel/core": "^7.24.6",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/preset-react": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.12.12",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/serve-handler": "^6.1.4",
    "babel-plugin-macros": "^3.1.0",
    "colorette": "^2.0.20",
    "dayjs": "^1.11.11",
    "fsevents": "^2.3.3",
    "rollup": "^4.18.0",
    "rollup-plugin-tsc-alias": "^1.1.2",
    "rollup-plugin-userscript-metablock": "^0.4.1",
    "serve": "^14.2.3",
    "serve-handler": "^6.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@iarna/toml": "^2.2.5",
    "@manypkg/cli": "^0.21.0",
    "@manypkg/get-packages": "^2.2.0",
    "@microsoft/api-extractor": "^7.38.3",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "bun-types": "^1.0.13",
    "eslint": "^8.54.0",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "execa": "^8.0.1",
    "parse-json": "^8.0.0",
    "prettier": "^3.1.0",
    "ts-json-schema-generator": "^1.4.0",
    "ts-standard": "^12.0.2",
    "ts-to-zod": "^3.2.0",
    "tsc-alias": "^1.8.8",
    "tsup": "^8.0.0",
    "tsx": "^4.2.0",
    "zod": "^3.22.4"
  }
}
